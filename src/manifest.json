{
  "manifest_version": 3,
  "name": "AI Fusion - 多模型聚合",
  "version": "1.0.0",
  "description": "免费AI模型聚合插件，支持GPT/Claude/DeepSeek/Kimi - 使用自己的API Key",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api.deepseek.com/*",
    "https://api.moonshot.cn/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html",
    "default_width": 400
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Fusion"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "contexts": ["selection"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
